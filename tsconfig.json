{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "es6",
      "module": "commonjs",
      "strict": true, 
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./public/js"
    },
    "include": [
      "resources/assets/*.png",
      "resources/ts/*.tsx",
      "resources/ts/**/*.tsx",
      "resources/ts/__tests__/*.test.tsx", 
    ],
    "exclude": [
      "node_modules"
    ]
  }